# SubTranslate 环境变量配置示例
# 复制此文件为 .env 并填入适当的值

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# FFmpeg 配置
# 如果 FFmpeg 已在系统 PATH 中，可以留空
FFMPEG_PATH=
FFPROBE_PATH=
FFMPEG_THREADS=4

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=subtranslate.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API 服务器配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ALLOWED_ORIGINS=http://localhost:3000
API_KEY=your_api_key_here

# 应用程序配置
MAX_CONCURRENT_TASKS=2
DEFAULT_OUTPUT_DIR=./output
TEMP_DIR=./temp
ALLOWED_FORMATS=mp4,mkv,avi,webm
APP_DEBUG=false

# 开发配置
PYTHONPATH=./src 