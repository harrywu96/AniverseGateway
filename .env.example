# 异世界语桥 (AniVerse Gateway) 环境变量配置示例
# 复制此文件为 .env 并填入适当的值

# 基本配置
APP_DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=aniversegateway.log
MAX_CONCURRENT_TASKS=2
MAX_REQUESTS_PER_MINUTE=45
DEFAULT_OUTPUT_DIR=./output
TEMP_DIR=./temp
ALLOWED_FORMATS=mp4,mkv

# FFmpeg配置
# 如果ffmpeg在PATH中，可以留空
FFMPEG_PATH=
FFPROBE_PATH=
FFMPEG_THREADS=4

# AI服务配置
# 可选值: openai, zhipuai, volcengine, baidu, azure, anthropic, custom
AI_PROVIDER=openai

# OpenAI配置
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# 智谱AI配置
ZHIPUAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
ZHIPUAI_BASE_URL=https://open.bigmodel.cn/api/paas/v3
ZHIPUAI_MODEL=glm-4
ZHIPUAI_MAX_TOKENS=4096
ZHIPUAI_TEMPERATURE=0.3

# 火山引擎配置
VOLCENGINE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
VOLCENGINE_BASE_URL=https://nebulaai.volces.com/api
VOLCENGINE_MODEL=skylark-pro
VOLCENGINE_MAX_TOKENS=4096
VOLCENGINE_TEMPERATURE=0.3

# 百度文心一言配置
BAIDU_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
BAIDU_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
BAIDU_BASE_URL=https://aip.baidubce.com
BAIDU_MODEL=ernie-bot-4
BAIDU_MAX_TOKENS=4096
BAIDU_TEMPERATURE=0.3

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_BASE_URL=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_MAX_TOKENS=4096
AZURE_OPENAI_TEMPERATURE=0.3

# Anthropic配置
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-opus
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.3

# SiliconFlow配置
SILICONFLOW_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_MODEL=deepseek-ai/DeepSeek-V2.5
SILICONFLOW_MAX_TOKENS=4096
SILICONFLOW_TEMPERATURE=0.3
SILICONFLOW_TOP_P=0.7
SILICONFLOW_TOP_K=50
SILICONFLOW_FREQUENCY_PENALTY=0.0

# 自定义API配置
CUSTOM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
CUSTOM_API_BASE_URL=https://your-custom-service.com/api
CUSTOM_API_MODEL=default
CUSTOM_API_MAX_TOKENS=4096
CUSTOM_API_TEMPERATURE=0.3
CUSTOM_API_HEADERS={"X-Custom-Header": "value"}
CUSTOM_API_MODEL_PARAMS={"custom_param": "value"}

# API服务器配置
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ALLOWED_ORIGINS=http://localhost:3000
API_KEY=

# 日志配置
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# 日志目录（可选，默认为打包环境下的用户数据目录/logs，开发环境下的./logs）
LOG_DIR=
# 指定具体的日志文件路径（可选，会覆盖LOG_DIR设置）
LOG_FILE=

# 应用程序配置
PYTHONPATH=./src 