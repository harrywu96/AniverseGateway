{
  "name": "subtranslate",
  "version": "1.0.0",
  "private": true,
  "description": "智能视频字幕翻译系统",
  "scripts": {
    "dev": "pnpm --filter electron-app dev",
    "dev:win": "powershell -Command \"$OutputEncoding = [System.Text.Encoding]::UTF8; chcp 65001 | Out-Null; pnpm --filter electron-app dev:win\"",
    "build": "pnpm --filter electron-app build",
    "test": "pnpm -r test"
  },
  "keywords": [
    "subtitle",
    "translation",
    "ai",
    "electron",
    "react",
    "vite"
  ],
  "author": "SubTranslate Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "18.19.86",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2"
  }
}