{
  "appId": "com.aniversegateway.app",
  "productName": "AniVerse Gateway",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist"
  ],
  "extraResources": [
    {
      "from": "../../backend",
      "to": "backend"
    }
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "public/icons/icon.ico"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "public/icons/icon.icns"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "public/icons/icon.png"
  },
  "publish": null
}